@model Snack

<div class="col-md-6 col-lg-4">
    <div>
        <p><img class="img-fluid snack-image" src="@Model.ImageUrl" /></p>
        <h4 class="snack-name">@Model.Name</h4>
        <h6 class="snack-price">Price: @Model.Price.ToString("c")</h6>
        <p class="short-description">@Model.ShortDescription</p>
    </div>
</div>